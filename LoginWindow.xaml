<Window x:Class="A2AnshChhabra.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2AnshChhabra"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Login" HorizontalAlignment="Center" FontSize="35" FontWeight="Bold"></Label>
            <TextBlock Margin="100 0 100 0" Height="67" Width="610">
                <Label Content="User Name:" FontSize="20" Margin="0 13 0 0"></Label>
                <TextBox x:Name="usernameBox" Width="426" Height="35" BorderBrush="Black"/>
            </TextBlock>
            <TextBlock Margin="100 0 100 0" Height="67" Width="610">
                <Label Content="Password:" FontSize="20" Margin="15 13 0 0"></Label>
                <TextBox x:Name="passwordBox" Width="426" Height="35" BorderBrush="Black"/>
            </TextBlock>
            <Button Click="LoginButton_Click" Content="Login" Margin="10 40 0 0" Width="93" Height="32"></Button>
            <Button Click="CancelButton_Click" Content="Cancel" Margin="300 -32 0 0" Width="93" Height="32"></Button>
        </StackPanel>
    </Grid>
</Window>
