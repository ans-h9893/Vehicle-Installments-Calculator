<Window x:Class="A2AnshChhabra.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2AnshChhabra"
        mc:Ignorable="d"
        Title="Vehicle Installments Calculator" Height="915" Width="800">
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"></RowDefinition>
            <RowDefinition Height="AUTO"></RowDefinition>
            <RowDefinition Height="AUTO"></RowDefinition>
            <RowDefinition Height="AUTO"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Customer Information"></Label>
            <TextBox x:Name="custNameBox" Text="Name" Margin="10 0 10 5"></TextBox>
            <TextBox x:Name="custPhoneBox" Text="Phone" Margin="10 0 10 5"></TextBox>
            <TextBox x:Name="custCityBox" Text="City" Margin="10 0 10 5"></TextBox>
            <ComboBox x:Name="custProvinceBox" Margin="10 0 10 10" SelectedIndex="0">
                <ComboBoxItem Content=""></ComboBoxItem>
                <ComboBoxItem Content="AB"></ComboBoxItem>
                <ComboBoxItem Content="BC"></ComboBoxItem>
                <ComboBoxItem Content="MB"></ComboBoxItem>
                <ComboBoxItem Content="NB"></ComboBoxItem>
                <ComboBoxItem Content="NL"></ComboBoxItem>
                <ComboBoxItem Content="NT"></ComboBoxItem>
                <ComboBoxItem Content="NS"></ComboBoxItem>
                <ComboBoxItem Content="NU"></ComboBoxItem>
                <ComboBoxItem Content="ON"></ComboBoxItem>
                <ComboBoxItem Content="PE"></ComboBoxItem>
                <ComboBoxItem Content="QC"></ComboBoxItem>
                <ComboBoxItem Content="SK"></ComboBoxItem>
                <ComboBoxItem Content="YT"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10 0 10 10" Grid.Row="1">

            <StackPanel Grid.Row="1">
                <Label Content="Vehicle Information" Margin="10 0 15 0"></Label>
                <Label Content="Type:" Margin="20 0 15 5"></Label>
                <RadioButton x:Name="carRadio" Content="Car" Margin="-600 0 0 0" Width="40"></RadioButton>
                <RadioButton x:Name="truckRadio" Content="Truck" Margin="-450 -15 0 0" Width="60"></RadioButton>
                <RadioButton x:Name="familyVanRadio" Content="Family Van" Margin="-270 -15 0 0" Width="80"></RadioButton>
                    <TextBlock>
                <Label Content="Age:" Margin="20 0 15 5"></Label>
                <RadioButton x:Name="usedRadio" Content="Used" Margin="-12 0 0 0" Width="51"></RadioButton>
                <RadioButton x:Name="newRadio" Content="New" Width="48" Margin="10 -14 0 0"></RadioButton>
                    </TextBlock>
                    <TextBox x:Name="vehiclePriceBox" Text="Price of Vehicle" Margin="0 5 0 5"></TextBox>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Margin="10 0 10 10" Grid.Row="2">
            <StackPanel Grid.Row="2">
                    <Label Content="Loan Information" Margin="0 0 0 5"></Label>
                    <TextBox x:Name="downPaymentBox" Text="Down Payment" Margin="0 0 0 5"></TextBox>
                    <Label Content="Interest Rate:"></Label>
                    <ComboBox x:Name="interestBox" SelectedIndex="0" Width="97" Margin="-500 -15 0 0">
                        <ComboBoxItem Content=""></ComboBoxItem>
                        <ComboBoxItem Content="0.99%"></ComboBoxItem>
                        <ComboBoxItem Content="1.99%"></ComboBoxItem>
                        <ComboBoxItem Content="2.99%"></ComboBoxItem>
                    </ComboBox>
                    <TextBox x:Name="customInterestBox" Text="Custom Rate" Width="78" Margin="-300 -20 0 0"></TextBox>
                    <Label Content="Loan Duration (months):" Margin="0 0 0 5"></Label>
                    <Slider x:Name="tenureSlider" Value="1" Minimum="12" Maximum="96" TickFrequency="12" IsSnapToTickEnabled="True"></Slider>
                    <TextBox x:Name="tenureBox" Margin="0 0 0 5" Text="{Binding ElementName=tenureSlider, Path=Value}"></TextBox>
                    <Label Content="Payment Frequency:" Margin="0 0 0 5"></Label>
                    <RadioButton x:Name="weeklyRadio" Content="Weekly" Margin="-600 0 0 0" Width="62"></RadioButton>
                    <RadioButton x:Name="biWeeklyRadio" Content="Bi-weekly" Width="73" Margin="-400 -15 0 0"></RadioButton>
                    <RadioButton x:Name="monthlyRadio" Content="Monthly" Width="69" Margin="-180 -15 0 0"></RadioButton>
                    <Label Content="Estimated Fixed Rate Loan Payment:" Margin="0 0 0 5"></Label>
                    <TextBox x:Name="estPaymentBox"></TextBox>
            </StackPanel>
        </Border>
            <StackPanel Grid.Row="3" Height="140" Grid.RowSpan="2" VerticalAlignment="Bottom">
                <Button Content="Clear" Width="44" Margin="0 0 0 5" Click="Clear_Click"></Button>
                <Button Content="Calculate" Width="61" Margin="0 0 0 5" Click="Calculate_Click"></Button>
                <Button Content="Save Rates" Width="68" Margin="0 0 0 5" Click="SaveRates_Click"></Button>
                <Button Content="Show Saved Rates" Width="109" Margin="0 0 0 0" Click="ShowRates_Click"></Button>
                 <ListView x:Name="SavedRatesList" Height="154" Margin="0,20,0,0" MouseDoubleClick="SavedRatesList_DoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Vehicle Type" DisplayMemberBinding="{Binding VehicleType}"/>
                            <GridViewColumn Header="Interest Rate" DisplayMemberBinding="{Binding InterestRate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
